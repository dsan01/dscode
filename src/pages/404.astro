---
import Button from '@primitives/Button'
import { Picture } from 'astro:assets'
import ErrorImg from 'src/assets/img/404/404.png'
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils'
import Layout from 'src/layouts/Layout.astro'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)
export const prerender = true
---

<Layout>
  <section
    class='font-body container flex min-h-svh flex-col gap-4 py-4 md:flex-row md:gap-12 md:py-10'
  >
    <div class='basis-1/3 md:my-auto'>
      <Picture
        src={ErrorImg}
        formats={['avif', 'webp']}
        alt='A description of my image.'
      />
    </div>
    <div class='flex basis-2/3 flex-col justify-center gap-4'>
      <h3 class='text-lg text-neutral-500'>Error 404</h3>
      <h1 class='font-title text-primary-600 text-4xl font-medium'>
        {t('errorPage.error404.title')}
      </h1>
      <p>{t('errorPage.error404.description')}</p>
      <div class='flex gap-4'>
        <a href={translatePath('/')}>
          <Button> {t('errorPage.error404.homePage')} </Button>
        </a>
      </div>
    </div>
  </section>
</Layout>
