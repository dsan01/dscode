---
import Hero from '@sections/index/Hero.astro'
import Layout from '../../layouts/Layout.astro'
import ServicesSlider from '@sections/index/ServicesSlider.astro'
import ProjectHelp from '@sections/index/ProjectHelp.astro'
import ContactBanner from '@generics/ContactBanner.astro'
import { getLangFromUrl, useTranslations } from 'src/i18n/utils'
import ServiceSection from '@generics/Trajectory'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Layout>
  <Hero />
  <ServicesSlider />
  <ProjectHelp />
  <ContactBanner
    Title={t('index.contactBanner.title')}
    ShowDesc={false}
  />
  <ServiceSection client:only="react" url={Astro.url} />
</Layout>
