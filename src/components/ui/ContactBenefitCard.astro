---
import { Icon } from 'astro-icon/components'
import { type BenefitsContactCardProps as Props } from '@data/props'

import { getLangFromUrl, useTranslations } from '@i18n/utils'

const { benefit } = Astro.props

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<div class='flex flex-row gap-8'>
  <div>
    <Icon
      name={benefit.icon}
      class='text-primary-700 text-4xl'
    />
  </div>
  <div class='flex flex-col gap-2'>
    <h6 class='text-primary-800 font-title text-xl font-medium'>
      {t(benefit.title)}
    </h6>
    <p class='font-body text-neutral-800'>
      {t(benefit.description)}
    </p>
  </div>
</div>
